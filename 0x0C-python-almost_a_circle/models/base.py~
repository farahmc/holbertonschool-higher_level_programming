#!/usr/bin/python3
"""
A class Base to be the base of other classes in this project
"""


class Base:
    """
    Defines a base class for other classes
    """
    __nb_objects = 0

    def __init__(self, id=None):
        """
        Initialise the class

        Arguments:
        id - value of type int
        """
        if id != None:
            self.id = id

        __nb_objects += 1
        self.id = __nb.objects
